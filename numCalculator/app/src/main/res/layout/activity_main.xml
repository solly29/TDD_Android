<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.example.numcalculator.viewmodel.MainViewModel" />

        <import type="android.widget.Button"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:background="@color/black">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/result_guideline"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@{viewmodel.formulaStrLiveData}"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:gravity="right|center"
            app:layout_constraintTop_toTopOf="@+id/result_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gride_text_guideline"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gride_text_guideline"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:rowCount="5"
            android:columnCount="4"
            app:layout_constraintTop_toTopOf="@id/gride_text_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="C"
                android:textSize="45dp"
                android:textColor="@color/black"
                android:background="@drawable/cal_button_background"
                android:backgroundTint="#9F9F9F"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="+"
                android:textSize="45dp"
                android:background="@drawable/cal_button_background"
                android:backgroundTint="#9F9F9F"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="%"
                android:textSize="45dp"
                android:background="@drawable/cal_button_background"
                android:backgroundTint="#9F9F9F"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="/"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:backgroundTint="#F8A62D"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="1"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="2"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="3"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="*"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:backgroundTint="#F8A62D"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="4"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="5"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="6"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="-"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:backgroundTint="#F8A62D"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="7"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="8"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="9"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="+"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:backgroundTint="#F8A62D"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                android:layout_rowWeight="1"
                android:text="0"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background2"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="."
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:onClick="@{(e) -> viewmodel.addFormulaText(((Button)e).text.toString())}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="="
                android:textSize="45dp"
                android:textColor="@color/white"
                android:background="@drawable/cal_button_background"
                android:backgroundTint="#F8A62D"
                android:onClick="@{() -> viewmodel.formulaResult()}"/>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>